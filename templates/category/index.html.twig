{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}
{% block etiquette %}Nos Category {% endblock %}
{% block section %} List of category {% endblock %}
{% block body %}
    <h1>Category index</h1>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-danger" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Create new</a>
{% endblock %}
